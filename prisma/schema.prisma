generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  TEMPORARY
  ACTIVE
}

enum Role {
  USER
  MEMBER
  ADMIN
}

model User {
  id          String     @id @default(cuid())
  name        String
  phoneNumber String     @unique
  status      UserStatus @default(TEMPORARY)
  role        Role?      @default(USER)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  agreedToTerms         Boolean @default(false)
  agreedToPrivacyPolicy Boolean @default(false)
  agreedToMarketing     Boolean @default(false)

  sessions                 Session[]
  keys                     Key[]
  eventEntries             StampEntry[]
  StampCard                StampCard[]
  reviews                  Review[]
  ClaimableStampRedemption ClaimableStampRedemption[]
  memorySpaces             MemorySpace[]
  memoryPosts              MemoryPost[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Key {
  id             String  @id
  userId         String
  hashedPassword String?
  user           User    @relation(references: [id], fields: [userId], onDelete: Cascade)

  @@unique([id, userId])
}

